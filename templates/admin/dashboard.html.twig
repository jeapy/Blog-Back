{# templates/admin/my_dashboard.html.twig #}
{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}

    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal"> <i class="fas fa-user"></i>  Utilisateur</h4>
          </div>
          <div class="card-body p-4">
            <h1 class="card-title pricing-card-title">{{user}}<small class="text-body-secondary fw-light"></small></h1>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal"><i class="fas fa-archive"></i>  Article Archivé</h4>
          </div>
          <div class="card-body p-4">
            <h1 class="card-title pricing-card-title">{{archived_article}}</h1>
            
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-bg-primary border-primary">
            <h4 class="my-0 fw-normal"><i class="fas fa-paper-plane"></i>  Article Publié</h4>
          </div>
          <div class="card-body p-4">
            <h1 class="card-title pricing-card-title">{{published_article}}</h1>       
    
          </div>
        </div>
      </div>
    </div>


  <div class="row row-cols-1 mb-3 ">
        <div class="col-md-6">
            <div class="card mb-4">
                {{ render_chart(chart) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
             {{ render_chart(chart_bar) }}
            </div>
        </div>
    </div>

    
{% endblock main %}